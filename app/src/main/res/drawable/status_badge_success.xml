<?xml version="1.0" encoding="utf-8"?>
<!-- status_badge_success.xml - Place in app/src/main/res/drawable/ -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color with subtle gradient -->
    <gradient
        android:startColor="#E8F5E8"
        android:endColor="#C8E6C9"
        android:angle="90" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#4CAF50" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Padding -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />

</shape>