<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".ui.metermatch.MeterDetailScanFragment">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/meter_info_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:scaleType="fillCenter" />

    <!-- Top Controls -->
    <LinearLayout
        android:id="@+id/top_controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circular_button_background"
            android:src="@drawable/ic_arrow_back_24"
            android:contentDescription="Back"
            app:tint="@android:color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btn_toggle_flash"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circular_button_background"
            android:src="@drawable/ic_flash_off"
            android:contentDescription="@string/toggle_flash"
            app:tint="@android:color/white" />

    </LinearLayout>

    <!-- QR Scan Frame -->
    <FrameLayout
        android:id="@+id/scan_frame_container"
        android:layout_width="280dp"
        android:layout_height="280dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/meter_info_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <View
            android:id="@+id/scan_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/qr_scan_frame" />

        <!-- Scanning animation line -->
        <View
            android:id="@+id/scan_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/scan_line_gradient"
            android:visibility="visible" />

    </FrameLayout>

    <!-- Instructions Text -->
    <TextView
        android:id="@+id/instruction_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:text="Scan the QR code on the target meter"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="3"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/scan_frame_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        android:text="Position QR code within the frame"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:shadowColor="@android:color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="3"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/instruction_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Meter Information Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/meter_info_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Target Meter Information"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:gravity="center" />

            <!-- Meter Number -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_meter_24"
                    android:layout_marginEnd="8dp"
                    app:tint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/meter_number_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Meter: M001"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    tools:text="Meter: M001" />

            </LinearLayout>

            <!-- Target Serial Number -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_qr_code_scanner_24"
                    android:layout_marginEnd="8dp"
                    app:tint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/target_serial_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Target S/N: ABC123456"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="monospace"
                    tools:text="Target S/N: ABC123456" />

            </LinearLayout>

            <!-- Place -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location_24"
                    android:layout_marginEnd="8dp"
                    app:tint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/meter_place_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Location: Main Building - Floor 1"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="Location: Main Building - Floor 1" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Progress indicator for scanning -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="?android:attr/progressBarStyle"
        android:indeterminateTint="@android:color/white"
        app:layout_constraintTop_toTopOf="@+id/scan_frame_container"
        app:layout_constraintBottom_toBottomOf="@+id/scan_frame_container"
        app:layout_constraintStart_toStartOf="@+id/scan_frame_container"
        app:layout_constraintEnd_toEndOf="@+id/scan_frame_container"
        tools:visibility="visible" />

    <!-- Success Animation -->
    <ImageView
        android:id="@+id/success_animation"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_check_circle"
        android:visibility="gone"
        app:tint="@color/success_green"
        app:layout_constraintTop_toTopOf="@+id/scan_frame_container"
        app:layout_constraintBottom_toBottomOf="@+id/scan_frame_container"
        app:layout_constraintStart_toStartOf="@+id/scan_frame_container"
        app:layout_constraintEnd_toEndOf="@+id/scan_frame_container"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>