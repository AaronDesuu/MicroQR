<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/stroke_color"
    app:strokeWidth="1dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_location_on_24"
            android:contentDescription="@string/location_fragment_title"
            app:tint="@color/primary_color"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/location_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/primary_text_color"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Building A - Floor 1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/edit_location_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_edit_24"
                android:contentDescription="@string/edit_location"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/primary_color"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/delete_location_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_delete"
                android:contentDescription="@string/delete_location"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/error_red" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>