<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Location Selection Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/meter_location"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text_color"
        android:layout_marginBottom="8dp"
        android:drawableStart="@drawable/ic_location_on_24"
        android:drawablePadding="8dp"
        android:drawableTint="@color/primary_color" />

    <Spinner
        android:id="@+id/location_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:minHeight="48dp"
        android:background="@drawable/spinner_background" />

    <!-- Custom Location Input (initially hidden) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/custom_location_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:boxBackgroundMode="outline"
        app:hintTextColor="@color/secondary_text_color"
        android:hint="@string/custom_location_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/custom_location_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:textColor="@color/primary_text_color"
            android:imeOptions="actionNext" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/stroke_color"
        android:layout_marginVertical="16dp" />

    <!-- Meter Number Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/meter_number"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text_color"
        android:layout_marginBottom="8dp"
        android:drawablePadding="8dp"
        app:drawableStartCompat="@drawable/ic_numbers_24"
        app:drawableTint="@color/primary_color" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/meter_number_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxBackgroundMode="outline"
        app:hintTextColor="@color/secondary_text_color"
        app:helperText="@string/meter_number_helper"
        app:helperTextTextColor="@color/secondary_text_color"
        android:hint="@string/meter_number_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/meter_number_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:textColor="@color/primary_text_color"
            android:imeOptions="actionDone" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Info Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@drawable/info_background"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_info"
            android:layout_marginEnd="8dp"
            app:tint="@color/primary_color" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/meter_assignment_info"
            android:textSize="12sp"
            android:textColor="@color/secondary_text_color"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</LinearLayout>