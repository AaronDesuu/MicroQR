<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- File Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_file_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="filename.csv"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/textView_file_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jan 15, 2025"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/textView_meter_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 meters"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valid"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/status_background"
                android:padding="4dp"
                android:layout_gravity="top" />

        </LinearLayout>

        <!-- Action Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_meter_check"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="MeterCheck"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                app:strokeColor="@color/design_default_color_primary"
                app:icon="@android:drawable/ic_menu_search"
                app:iconSize="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_match"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Match"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                app:strokeColor="@color/design_default_color_secondary"
                app:icon="@android:drawable/ic_menu_sort_by_size"
                app:iconSize="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_delete_file"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="48dp"
                android:layout_height="36dp"
                android:text=""
                android:contentDescription="Delete file"
                app:strokeColor="@android:color/holo_red_dark"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconSize="16dp"
                app:iconTint="@android:color/holo_red_dark" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>