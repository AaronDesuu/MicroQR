<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:strokeColor="@color/stroke_color"
    app:strokeWidth="1dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Meter Number Badge -->
            <TextView
                android:id="@+id/tvMeterNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_background_primary"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginEnd="12dp"
                tools:text="001" />

            <!-- Status Indicator -->
            <View
                android:id="@+id/statusIndicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/circle_background_warning"
                android:layout_marginEnd="8dp" />

            <!-- Title Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSerialNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text_color"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="ABC123456789" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text_color"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp"
                    tools:text="Building A - Floor 1" />

            </LinearLayout>

            <!-- Conditional Status/Action Area -->
            <LinearLayout
                android:id="@+id/actionArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Status Badge -->
                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/badge_background_warning"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:text="@string/unscanned_meters"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:text="Pending" />

                <!-- Conditional Warning/Info Text -->
                <TextView
                    android:id="@+id/tvConditionWarning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="@color/warning_orange"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"
                    android:visibility="gone"
                    android:maxLines="2"
                    android:gravity="center"
                    tools:visibility="visible"
                    tools:text="No Location\nSet" />

            </LinearLayout>

        </LinearLayout>

        <!-- Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_folder_24"
                    app:tint="@color/secondary_text_color"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvFileName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text_color"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="meters_data.csv" />

            </LinearLayout>

            <!-- Tap to Scan Hint -->
            <TextView
                android:id="@+id/tvTapHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tap_to_scan"
                android:textSize="10sp"
                android:textColor="@color/primary_color"
                android:textStyle="italic"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:background="@drawable/background_tap_hint"
                tools:text="Tap to scan" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>