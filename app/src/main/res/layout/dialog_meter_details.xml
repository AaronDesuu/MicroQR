<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Meter Number Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/meter_number_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxBackgroundMode="outline"
        app:hintTextColor="@color/secondary_text_color"
        android:hint="@string/meter_number_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/meter_number_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:textColor="@color/primary_text_color"
            android:imeOptions="actionNext" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Location Selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_location"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text_color"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/location_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:minHeight="48dp" />

    <!-- Custom Location Input (initially hidden) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/custom_location_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:boxBackgroundMode="outline"
        app:hintTextColor="@color/secondary_text_color"
        android:hint="@string/custom_location_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/custom_location_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:textColor="@color/primary_text_color"
            android:imeOptions="actionDone" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>